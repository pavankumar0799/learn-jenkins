pipeline {
    agent {
        lable 'Agent-1'
    }
    stages {
        stage('Build') {
            steps {
                sh 'echo This is Build'
            
            }
        }
        stage('Test') {
            steps {
                sh 'echo This is test'
                
            }
        }
        stage('deploy') {
            steps {
                sh 'echo this is deploy'
            }
        }
            

        
    }
    post {
        always {
            echo "this section run always"
        }
        success {
            echo "this section run when pipeline success"
        }
        failure {
            echo "this section run when pipeline failure"
        }
    }
}